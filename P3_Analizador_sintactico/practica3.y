%%
/* Inicio reglas gramaticales */
S : PRINCIPAL BLOQUE;

BLOQUE : INI_BLOQUE DECL_VAR_LOCALES DECL_PROCEDIMIENTOS SENTENCIAS FIN_BLOQUE
	   | SENTENCIAS
;

DECL_PROCEDIMIENTOS : DECL_PROCEDIMIENTOS DECL_PROCEDIMIENTO;

DECL_PROCEDIMIENTO : CAB_PROCEDIMIENTO BLOQUE
				   |
;

CAB_PROCEDIMIENTO : ID '(' PARAMETRO ')';

PARAMETRO : PARAMETRO ',' TIPO_DATO ID
		  | TIPO_DATO ID
		  |
;

DECL_VAR_LOCALES : DECL_VAR_LOCALES VAR_LOCAL
				 | VAR_LOCAL
				 |
;

SENTENCIAS : BUCLE_FOR
		   | BUCLE_WHILE
		   | SENTENCIA_SI
		   | ASIGNACION
		   | ASIGNACION OPERACION PUNTOYCOMA
		   | ID ASIGNACION CAB_PROCEDIMIENTO PUNTOYCOMA
		   | SENTENCIA_ENTRADA PUNTOYCOMA
		   | SENTENCIA_SALIDA PUNTOYCOMA
		   | BLOQUE
		   | SENTENCIAS
;

SENTENCIA_ENTRADA : 'leer' '(' LISTA_VAR ')';

SENTENCIA_SALIDA : 'escribir' '(' LIST_ESXP_O_CAD ')';

LISTA_VAR : LISTA_VAR ',' ID
          | ID
;

LIST_ESXP_O_CAD : LIST_ESXP_O_CAD ',' EXPRESION
				| LIST_ESXP_O_CAD ',' '"' CADENA '"'
				| EXPRESION
				| '"' CADENA '"'
;

CADENA : CADENA LETRA
	   | LETRA
;

VAR_LOCAL : TIPO_DATO ID PUNTOYCOMA
		  | TIPO_DATO ID OP_ASIGNACION EXPRESION PUNTOYCOMA
		  | TIPO_DATO ID ',' ID
;

BUCLE_FOR : BUCLE_PARA ID OP_ASIGNACION NUMERO MODO_FOR NUMERO FINPARA BLOQUE;

CONDICION : VAR_LOCAL OP_LOGICO VAR_LOCAL
		  | VAR_LOCAL OP_LOGICO CONST
;

SENTENCIA_SI : BUCLE_SI '(' CONDICION ')' ENTONCES BLOQUE SINO BLOQUE;

BUCLE_WHILE : BUCLE_MIENTRAS '(' CONDICION ')' BLOQUE;

TIPO_DATO : TIPO_BASICO
          | TIPO_COMPLEJO
;

TIPO_BASICO : TIPO_VAR;

TIPO_COMPLEJO : DECL_LISTAS TIPO_BASICO;

CONST : CONSTANTE TIPO_DATO ID PUNTOYCOMA;

OP_BINARIO : OP_ARITMETICA
		   | OP_LOGICO
		   | OP_BINARIO
;

ASIGNACION : EXPRESION OP_ASIGNACION EXPRESION PUNTOYCOMA
		   | EXPRESION OP_ASIGNACION ASIGNACION
;

EXPRESION : EXPRESION OP_BINARIO EXPRESION
		  | OP_UNARIO EXPRESION
		  | EXPRESION OP_UNARIO
		  | OP_TERNARIA
		  | EXPRESION OP_UNARIO EXPRESION OP_ARITMETICA EXPRESION
		  | '(' EXPRESION ')'
		  | NUMERO
		  | CARACTERES
		  | ID
		  | AGREGADOS
;

AGREGADOS : INI_AGREGADO AGREGADOS FIN_AGREGADO
		  | EXPRESION ','
		  | EXPRESION
		  |
;

CARACTERES : CARACTERES LETRA
		   | LETRA
;

LETRA : ID;

/* Fin reglas gramaticales */

